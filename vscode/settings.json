{
  "workbench.colorTheme": "Higher Contrast Zenburn",
  "editor.fontSize": 16,
  "editor.fontFamily": "Fira Code",
  "telemetry.enableCrashReporter": false,
  "telemetry.enableTelemetry": false,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "vim.leader": ",",
  "vim.easymotion": true,
  "vim.foldfix": true,
  "vim.useSystemClipboard": true,
  "vim.normalModeKeyBindings": [
    {
      "before": ["<leader>", "t"],
      "commands": ["openInTerminal"]
    },
    {
      "before": ["<leader>", ","],
      "commands": ["workbench.action.openSettingsJson"]
    },
    {
      "before": ["<leader>", "k"],
      "commands": ["workbench.action.closeActiveEditor"]
    },
    {
      "before": ["<leader>", "|"],
      "commands": ["workbench.action.splitEditorRight"]
    },
    {
      "before": ["<leader>", "-"],
      "commands": ["workbench.action.splitEditorDown"]
    },
    {
      "before": ["<leader>", "/"],
      "commands": ["workbench.action.terminal.searchWorkspace"]
    },
    {
      "before": ["<leader>", "f"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["<leader>", "s"],
      "commands": ["workbench.action.toggleSidebarVisibility"]
    },
    {
      "before": ["<leader>", "e"],
      "commands": ["workbench.view.explorer"]
    },
    {
      "before": ["<leader>", "Enter"],
      "commands": ["editor.action.revealDefinition"]
    },
    {
      "before": ["<leader>", "b"],
      "commands": [
        "workbench.action.quickOpenPreviousRecentlyUsedEditorInGroup"
      ]
    },
    {
      "before": ["<leader>", "q"],
      "commands": ["workbench.action.quickOpenView"]
    },
    {
      "before": ["<leader>", "y"],
      "commands": ["workbench.action.openSnippets"]
    },
    {
      "before": ["<leader>", "M"],
      "commands": ["editor.action.toggleMinimap"]
    },
    {
      "before": ["<leader>", "r"],
      "commands": ["workbench.action.toggleFullScreen"]
    },
    {
      "before": ["<leader>", "c"],
      "commands": ["copyFilePath"]
    },
    {
      "before": ["<leader>", "0"],
      "commands": ["workbench.action.focusSideBar"]
    },
    {
      "before": ["<leader>", "n"],
      "commands": ["workbench.action.previousEditor"]
    },
    {
      "before": ["<leader>", "m"],
      "commands": ["workbench.action.nextEditor"]
    },
    {
      "before": ["<leader>", "z"],
      "commands": ["workbench.action.toggleZenMode"]
    },
    {
      "before": ["<leader>", "i", "t"],
      "commands": [
        {
          "command": "editor.action.insertSnippet",
          "when": "editorTextFocus",
          "args": {
            "snippet": "// @TODO: $1"
          }
        }
      ],
      "after": ["i"]
    },
    {
      "before": ["<leader>", "i", "c"],
      "commands": [
        {
          "command": "editor.action.insertSnippet",
          "when": "editorTextFocus",
          "args": {
            "snippet": "console.log(\"$1: \", $1);"
          }
        }
      ],
      "after": ["i"]
    }
  ],
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[rust]": {
    "editor.defaultFormatter": "statiolake.vscode-rustfmt"
  },
  "prettier.requireConfig": true,
  "zenMode.hideLineNumbers": false,
  "todo-tree.general.tags": ["@TODO"],
  "todo-tree.highlights.customHighlight": {
    "@TODO": {
      "type": "line",
      "gutterIcon": true,
      "icon": "bell-fill",
      "foreground": "red",
      "background": "white",
      "opacity": 50,
      "iconColor": "red"
    }
  },
  "workbench.iconTheme": "vscode-icons",
  "json.schemas": [],
  "editor.tabCompletion": "on"
}
